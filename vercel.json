{
    "redirects": [
        {
            "source": "/:path*",
            "has": [
                {
                    "type": "host",
                    "value": "www.vigneshbs.xyz"
                }
            ],
            "destination": "https://vigneshbs.xyz/:path*",
            "permanent": true
        }
    ],
    "headers": [
        {
            "source": "/sitemap.xml",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/xml"
                }
            ]
        },
        {
            "source": "/robots.txt",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "text/plain"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/:path*"
        },
        {
            "source": "/((?!api|sitemap.xml|robots.txt).*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/chat.js": {
            "memory": 256,
            "maxDuration": 10
        }
    }
}