{
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/:path*"
        },
        {
            "source": "/((?!api/|sitemap.xml|robots.txt).*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/chat.js": {
            "memory": 256,
            "maxDuration": 10
        }
    }
}